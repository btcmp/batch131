<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.bootcamp.xsisa.hjbusbooking.CariKeberangkatan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/kotab"
            android:layout_below="@+id/kotab"
            android:layout_marginTop="10dp"
            android:text="Tanggal Keberangkatan" />

        <Spinner
            android:id="@+id/kotab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tHarga"
            android:layout_below="@+id/tHarga" />

        <TextView
            android:id="@+id/tJamKeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Kota Keberangkatan" />

        <Button
            android:id="@+id/tombol_cari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f24d00"
            android:elevation="1dp"
            android:text="Cari"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/tanggal_keb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:inputType="date" />

        <TextView
            android:id="@+id/tHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/kotaa"
            android:layout_below="@+id/kotaa"
            android:layout_marginTop="10dp"
            android:text="Kota Tujuan" />



        <Spinner
            android:id="@+id/kotaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tJamKeb"
            android:layout_below="@+id/tJamKeb"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/tSessionKu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tanggal_keb"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
