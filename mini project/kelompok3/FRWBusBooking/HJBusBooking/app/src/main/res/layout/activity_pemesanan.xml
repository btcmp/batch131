                    android:id="@+id/limaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5A" />

                <CheckBox
                    android:id="@+id/limab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5B" />

                <CheckBox
                    android:id="@+id/limac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5C" />

                <CheckBox
                    android:id="@+id/limad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5D" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/enama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6A" />

                <CheckBox
                    android:id="@+id/enamb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6B" />

                <CheckBox
                    android:id="@+id/enamc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6C" />

                <CheckBox
                    android:id="@+id/enamd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6D" />
