            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/sepuluha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10A" />

                <CheckBox
                    android:id="@+id/sepuluhb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10B" />

                <CheckBox
                    android:id="@+id/sepuluhc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10C" />

                <CheckBox
                    android:id="@+id/sepuluhd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10D" />
            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/tombol_yakinpesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f24d00"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:text="Pesan" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
