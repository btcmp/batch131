                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7A" />

                <CheckBox
                    android:id="@+id/tujuhb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7B" />

                <CheckBox
                    android:id="@+id/tujuhc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7C" />

                <CheckBox
                    android:id="@+id/tujuhd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7D" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/delapana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8A" />

                <CheckBox
                    android:id="@+id/delapanb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8B" />

                <CheckBox
                    android:id="@+id/delapanc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8C" />

                <CheckBox
                    android:id="@+id/delapand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8D" />
            </TableRow>

            <TableRow
